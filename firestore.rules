/**
 * @file Firebase Security Rules for the FunToKnow Platform.
 *
 * Core Philosophy:
 * This ruleset implements a multi-tiered security model with public read access for some content, user-owned data, and admin-restricted areas.
 *
 * Data Structure:
 * - /projects/{projectId}: Publicly readable projects.
 * - /blogPosts/{blogPostId}: Publicly readable blog posts.
 * - /contactMessages/{contactMessageId}: Admin-only contact messages.
 * - /users/{userId}: User profile data, accessible only to the user and admins.
 * - /authors/{authorId}: Publicly readable author data.
 * - /roles_admin/{userId}: Collection to store admin user IDs.
 *
 * Key Security Decisions:
 * - Public read access is granted for projects, blog posts and authors.
 * - Users can only read/write their own profile data.
 * - Contact messages are only accessible to admins.
 * - Admin status is determined by the existence of a document in the /roles_admin/{userId} collection.
 * - Listing of contact messages is disallowed to prevent unauthorized access.
 *
 * Denormalization for Authorization:
 * - Admin privileges are checked by verifying the existence of a document under `/roles_admin/{userId}` to avoid complex role-based queries.
 *
 * Structural Segregation:
 * - Private user data and public content are stored in separate collections to simplify access control and improve query performance.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read project data, but restricts create, update, and delete operations to admins.
     * @path /projects/{projectId}
     * @allow (get, list): if true
     * @allow (create): if isAdmin()
     * @deny (create): if !isAdmin()
     * @allow (update): if isAdmin()
     * @deny (update): if !isAdmin()
     * @allow (delete): if isAdmin()
     * @deny (delete): if !isAdmin()
     * @principle Allows public read access to projects, but restricts modifications to admins.
     */
    match /projects/{projectId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Allows anyone to read blog post data, but restricts create, update, and delete operations to admins.
     * @path /blogPosts/{blogPostId}
     * @allow (get, list): if true
     * @allow (create): if isAdmin()
     * @deny (create): if !isAdmin()
     * @allow (update): if isAdmin()
     * @deny (update): if !isAdmin()
     * @allow (delete): if isAdmin()
     * @deny (delete): if !isAdmin()
     * @principle Allows public read access to blog posts, but restricts modifications to admins.
     */
    match /blogPosts/{blogPostId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Restricts access to contact messages to admins only.
     * @path /contactMessages/{contactMessageId}
     * @allow (get): if isAdmin()
     * @deny (get): if !isAdmin()
     * @allow (list): if false;
     * @deny (list): always
     * @allow (create): if isAdmin()
     * @deny (create): if !isAdmin()
     * @allow (update): if isAdmin()
     * @deny (update): if !isAdmin()
     * @allow (delete): if isAdmin()
     * @deny (delete): if !isAdmin()
     * @principle Restricts access to contact messages to admins.
     */
    match /contactMessages/{contactMessageId} {
      allow get: if isAdmin();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Allows users to read and write their own profile data, and allows admins to read user data.
     * @path /users/{userId}
     * @allow (get): if isOwner(userId) || isAdmin()
     * @deny (get): if !isOwner(userId) && !isAdmin()
     * @allow (list): if false;
     * @deny (list): always
     * @allow (create): if isOwner(userId)
     * @deny (create): if !isOwner(userId)
     * @allow (update): if isOwner(userId)
     * @deny (update): if !isOwner(userId)
     * @allow (delete): if false;
     * @deny (delete): always
     * @principle Enforces user ownership for profile data and allows admin read access.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && resource.data.id == request.resource.data.id;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read author data, but restricts create, update, and delete operations to admins.
     * @path /authors/{authorId}
     * @allow (get, list): if true
     * @allow (create): if isAdmin()
     * @deny (create): if !isAdmin()
     * @allow (update): if isAdmin()
     * @deny (update): if !isAdmin()
     * @allow (delete): if isAdmin()
     * @deny (delete): if !isAdmin()
     * @principle Allows public read access to authors, but restricts modifications to admins.
     */
    match /authors/{authorId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

     /**
      * @description Determines admin privileges based on the existence of a document with the user's ID in this collection.
      * @path /roles_admin/{userId}
      */
    match /roles_admin/{userId} {
        allow get: if isAdmin();
        allow list: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}